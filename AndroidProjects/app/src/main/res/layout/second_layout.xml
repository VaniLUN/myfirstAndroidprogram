<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            android:paddingLeft="200dp"
            android:paddingTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        </TextView>
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintLeft_toLeftOf="parent">

    </Button>
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintLeft_toRightOf="@id/button7">

    </Button>
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintLeft_toRightOf="@id/button8">

    </Button>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintLeft_toLeftOf="parent">

    </Button>
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintLeft_toRightOf="@id/button4">

    </Button>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintLeft_toRightOf="@id/button5">

    </Button>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintLeft_toLeftOf="parent">

    </Button>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintLeft_toRightOf="@id/button1">

    </Button>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintLeft_toRightOf="@id/button2">

    </Button>
    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintLeft_toRightOf="@id/button1">

    </Button>
    <Button
        android:id="@+id/button."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="30dp"
        android:onClick="number"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toRightOf="@id/button0">

    </Button>
    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="30dp"
        android:onClick="operation"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintLeft_toRightOf="@id/button9">

    </Button>
    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="30dp"
        android:onClick="operation"
        app:layout_constraintTop_toBottomOf="@id/button20"
        app:layout_constraintLeft_toRightOf="@id/button6">

    </Button>
    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30dp"
        android:onClick="operation"
        app:layout_constraintTop_toBottomOf="@id/button21"
        app:layout_constraintLeft_toRightOf="@id/button3">

    </Button>
    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30dp"
        android:onClick="operation"
        app:layout_constraintTop_toBottomOf="@id/button22"
        app:layout_constraintLeft_toRightOf="@id/button.">

    </Button>
    <Button
        android:id="@+id/button_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="30dp"
        android:onClick="clean"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintLeft_toLeftOf="parent">

    </Button>
    <Button
        android:id="@+id/button_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30dp"
        android:onClick="result"
        app:layout_constraintTop_toBottomOf="@id/button."
        app:layout_constraintLeft_toLeftOf="@id/button22">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>
